                  <div className="w-8 h-8 rounded-lg bg-white flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
                    <BookOpen className="w-4 h-4 text-purple-600" />
                  </div>
                  <div className="flex-1">
                    <p className="text-sm font-semibold text-gray-800">Instant Answers</p>
                    <p className="text-xs text-gray-600">Quick responses</p>
                  </div>
                </div>

                <div className="flex items-center gap-3 p-3 rounded-xl bg-gradient-to-br from-blue-50 to-blue-100 border border-blue-200 hover:shadow-md transition-all cursor-pointer group">
                  <div className="w-8 h-8 rounded-lg bg-white flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
                    <GraduationCap className="w-4 h-4 text-blue-600" />
