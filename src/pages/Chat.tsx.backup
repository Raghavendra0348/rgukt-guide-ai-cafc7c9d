import { toast } from "sonner";
import { streamChat, type Message } from "@/lib/gemini-api";

interface ChatMessageType {
  id: string;
  role: "user" | "assistant";
  content: string;
  image?: string;
}

const quickPrompts = [
  { icon: GraduationCap, label: "Academic calendar", prompt: "What is the academic calendar for this semester? Include important dates." },
  { icon: BookOpen, label: "Exam schedule", prompt: "What is the examination schedule and how can I get my hall ticket?" },
  { icon: CalendarDays, label: "Fee deadlines", prompt: "What are the fee payment deadlines and available payment methods?" },
  { icon: Building2, label: "Hostel rules", prompt: "What are the hostel rules and regulations at RGUKT RK Valley?" },
];

const welcomeMessage: ChatMessageType = {
  id: "welcome",
  role: "assistant",
  content: `Hello! ðŸ‘‹ I'm Medha AI, your intelligent campus assistant for RGUKT RK Valley.

I can help you with:
â€¢ **Academic queries** â€” courses, grades, schedules, departments
â€¢ **Examination information** â€” schedules, hall tickets, results
â€¢ **Fee and payment details** â€” deadlines, structure, scholarships
â€¢ **Hostel and mess guidelines** â€” rules, timings, procedures
â€¢ **Library resources** â€” timings, issuing rules, digital access
â€¢ **Administrative procedures** â€” certificates, bonafide letters

How can I assist you today?`,
};

export default function Chat() {
  const [messages, setMessages] = useState<ChatMessageType[]>([welcomeMessage]);
  const [isLoading, setIsLoading] = useState(false);
  const messagesEndRef = useRef<HTMLDivElement>(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const handleSend = async (content: string, image?: string) => {
    const userMessage: ChatMessageType = {
      id: Date.now().toString(),
      role: "user",
      content,
      image,
    };

    setMessages((prev) => [...prev, userMessage]);
    setIsLoading(true);

    // Build message history for API (excluding welcome message)
    const apiMessages: Message[] = messages
      .filter((m) => m.id !== "welcome")
      .map((m) => ({ role: m.role, content: m.content }));
    apiMessages.push({ role: "user", content: image ? `${content}\n[Image provided for analysis]` : content });

    let assistantContent = "";
    const assistantId = (Date.now() + 1).toString();

    // Add empty assistant message that will be updated
    setMessages((prev) => [
      ...prev,
      { id: assistantId, role: "assistant", content: "" },
    ]);

    await streamChat({
      messages: apiMessages,
      onDelta: (chunk) => {
        assistantContent += chunk;
        setMessages((prev) =>
          prev.map((m) =>
            m.id === assistantId ? { ...m, content: assistantContent } : m
          )
        );
      },
      onDone: () => {
        setIsLoading(false);
      },
      onError: (error) => {
        setIsLoading(false);
        // Remove the empty assistant message
        setMessages((prev) => prev.filter((m) => m.id !== assistantId));
        toast.error("Failed to get response", {
          description: error,
        });
      },
    });
  };

  const handleReset = () => {
    setMessages([welcomeMessage]);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 flex flex-col">
      <Navbar />

      <main className="flex-1 pt-20 flex">
        {/* Left Side - Chat Area */}
        <div className="flex-1 flex flex-col relative">
          {/* Floating New Chat Button */}
          <div className="absolute top-6 right-6 z-10">
            <Button
              size="icon"
              onClick={handleReset}
              className="h-12 w-12 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 shadow-lg hover:shadow-xl hover:shadow-purple-300 transition-all"
              title="New Chat"
            >
              <RotateCcw className="w-5 h-5 text-white" />
            </Button>
          </div>

          {/* Messages */}
          <div className="flex-1 overflow-y-auto">
            <div className="container mx-auto px-4 py-6 max-w-4xl">
              <div className="space-y-6">
                {messages.map((message) => (
                  <ChatMessage
                    key={message.id}
                    role={message.role}
                    content={message.content}
                    image={message.image}
                    isLoading={isLoading && message.role === "assistant" && message.content === ""}
                  />
                ))}
                <div ref={messagesEndRef} />
              </div>
            </div>
          </div>

          {/* Quick Prompts */}
          {messages.length === 1 && (
            <div className="container mx-auto px-4 max-w-4xl pb-4">
              <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
                {quickPrompts.map((item) => {
                  const Icon = item.icon;
                  return (
                    <button
                      key={item.label}
                      onClick={() => handleSend(item.prompt)}
                      disabled={isLoading}
                      className="flex flex-col items-center gap-3 p-4 rounded-2xl bg-white border-2 border-purple-100 hover:border-purple-400 hover:bg-purple-50 text-center transition-all disabled:opacity-50 group shadow-sm hover:shadow-lg"
                    >
                      <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-100 to-blue-100 flex items-center justify-center group-hover:scale-110 transition-transform">
                        <Icon className="w-6 h-6 text-purple-600" />
                      </div>
                      <span className="text-sm text-gray-700 font-medium group-hover:text-purple-700 transition-colors">
                        {item.label}
                      </span>
                    </button>
                  );
                })}
              </div>
            </div>
          )}

          {/* Input */}
          <div className="border-t border-purple-100 bg-white/80 backdrop-blur-sm">
            <div className="container mx-auto px-4 py-5 max-w-4xl">
              <ChatInput onSend={handleSend} isLoading={isLoading} />
              <p className="text-xs text-gray-500 text-center mt-3 flex items-center justify-center gap-2">
                <Sparkles className="w-3 h-3" />
                Medha AI â€¢ Powered by Gemini AI â€¢ Supports English, Hindi & Telugu
              </p>
            </div>
          </div>
        </div>

        {/* Right Side - Robot Assistant Panel */}
        <div className="hidden xl:flex w-[340px] border-l border-purple-200 bg-gradient-to-b from-white to-purple-50/30 flex-col shadow-xl">
          {/* Header */}
          <div className="border-b border-purple-200 bg-gradient-to-r from-purple-100 via-purple-50 to-blue-50 px-5 py-4">
            <div className="flex items-center gap-3">
              <div className="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center shadow-lg">
                <Sparkles className="w-5 h-5 text-white" />
              </div>
              <div>
                <h3 className="text-lg font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">Medha AI</h3>
                <div className="flex items-center gap-1.5 text-xs text-gray-600">
                  <div className="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></div>
                  <span className="font-medium">Always Available</span>
                </div>
              </div>
            </div>
          </div>

          {/* Content - Centered Robot Only */}
          <div className="flex-1 overflow-y-auto flex items-center justify-center p-8">
            {/* Robot Image - Centered */}
            <div className="relative max-w-[260px]">
              <div className="bg-gradient-to-br from-purple-100 via-white to-blue-100 rounded-3xl p-6 border-2 border-purple-200 shadow-2xl">
                <img
                  src="/robot_logo.jpeg"
                  alt="Medha AI Assistant"
                  className="w-full h-auto object-contain"
                />
              </div>
              
              {/* Animated Badge */}
              <div className="absolute -top-3 -right-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white px-4 py-2 rounded-full shadow-xl text-sm font-bold flex items-center gap-2 animate-pulse">
                <Sparkles className="w-4 h-4" />
                AI Powered
              </div>

              {/* Corner decorations */}
              <div className="absolute top-3 left-3 w-6 h-6 border-t-3 border-l-3 border-purple-400 rounded-tl-xl"></div>
              <div className="absolute bottom-3 right-3 w-6 h-6 border-b-3 border-r-3 border-blue-400 rounded-br-xl"></div>
            </div>
          </div>

          {/* Footer */}
          <div className="border-t-2 border-purple-200 bg-gradient-to-r from-purple-100 via-purple-50 to-blue-50 px-5 py-4">
            <div className="text-center space-y-1">
              <p className="text-xs font-semibold text-gray-700">
                Powered by Google Gemini AI
              </p>
              <p className="text-[10px] text-gray-500">
                RGUKT RK Valley â€¢ Campus Assistant
              </p>
            </div>
          </div>
        </div>
      </main>
    </div>
  );
}
